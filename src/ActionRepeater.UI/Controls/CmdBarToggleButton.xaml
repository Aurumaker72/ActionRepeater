<UserControl
    x:Class="ActionRepeater.UI.Controls.CmdBarToggleButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <UserControl.Resources>
        <x:Double x:Key="ButtonSize">42</x:Double>
        <x:Double x:Key="ButtonIconSize">22</x:Double>
        <x:Double x:Key="FontSize">14</x:Double>
    </UserControl.Resources>

    <ToggleButton x:Name="_toggleButton"
                  Background="Transparent"
                  BorderBrush="Transparent"
                  Style="{StaticResource DisabledToggleButtonSettableBg}">

        <StackPanel x:Name="_stackpanel" Width="{StaticResource ButtonSize}" Height="{StaticResource ButtonSize}">
            <FontIcon x:Name="_fontIcon" FontFamily="{StaticResource SymbolThemeFontFamily}" FontSize="{StaticResource ButtonIconSize}" />
            <TextBlock x:Name="_textBlcok" FontSize="{StaticResource FontSize}" Margin="0,2,0,0" HorizontalAlignment="Center" />
        </StackPanel>
        
    </ToggleButton>
    
</UserControl>
