<UserControl
    x:Class="ActionRepeater.UI.Controls.ComboBoxIconnedItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid ColumnDefinitions="20,*" ColumnSpacing="10">
        <FontIcon x:Name="_fontIcon"
                  Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,4,0,0"/>
        <TextBlock x:Name="_textBlock"
                   Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
