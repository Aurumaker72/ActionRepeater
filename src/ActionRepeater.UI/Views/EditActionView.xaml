<UserControl
    x:Class="ActionRepeater.UI.Views.EditActionView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:ActionRepeater.UI.Views"
    xmlns:vms="using:ActionRepeater.UI.ViewModels"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.Resources>
        </Grid.Resources>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,18">
            <TextBlock Text="Add:" FontSize="16"
                       VerticalAlignment="Top"
                       Margin="0,5,5,10"/>

            <ComboBox FontSize="16"
                      Background="Transparent"
                      BorderBrush="Transparent"
                      SelectedIndex="{x:Bind ViewModel.SelectedActionIndex, Mode=TwoWay}"
                      IsEnabled="{x:Bind ViewModel.CanChangeAction, Mode=OneTime}">
                <StackPanel Orientation="Horizontal">
                    <FontIcon Glyph="&#xE92E;" FontSize="20" Margin="0,3,6,0"/>
                    <TextBlock Text="Key Action"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <FontIcon Glyph="&#xE962;" FontSize="18" Margin="0,3,8,0"/>
                    <TextBlock Text="Mouse Button Action"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <FontIcon Glyph="&#xE962;" FontSize="18" Margin="0,3,8,0"/>
                    <TextBlock Text="Mouse Wheel Action"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <FontIcon Glyph="&#xED5A;" FontSize="17" Margin="0,1,10,0"/>
                    <TextBlock Text="Wait Action"/>
                </StackPanel>
            </ComboBox>
        </StackPanel>

        <ContentControl Content="{x:Bind CurrentEditActionView, Mode=OneWay}"
                        Grid.Row="1"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch"/>

    </Grid>
    
</UserControl>
