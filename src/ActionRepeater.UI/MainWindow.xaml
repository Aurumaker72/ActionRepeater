<Window
    x:Class="ActionRepeater.UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:ActionRepeater.UI.Views"
    mc:Ignorable="d">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <views:CommandBarView Grid.Row="0" ViewModel="{x:Bind ViewModel.CommandBarViewModel}" />

        <views:ActionListView Grid.Row="1" ViewModel="{x:Bind ViewModel.ActionListViewModel}" />

    </Grid>

</Window>
